{% trans_default_domain "labels" %}

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="prueba tecnica brandlive">
    <meta name="author" content="Jane Celis">

    <title>{% block title %}{{ 'title.browser'|trans }}{% endblock %}</title>

    <!-- Styles -->
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/vendor/bootstrap/css/bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/vendor/datatables/css/datatables.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/vendor/jquery-confirm/css/jquery-confirm.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/main.css') }}"/>

    {% block stylesheets %}{% endblock %}
  </head>

  <body>

    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="{{ path("homepage") }}">
      <img src="{{ asset('bundles/app/img/brandlive-logo.png') }}" alt="Brandlive" class="navbar-logo" /> 
      {{ 'top.item.logo.text'|trans }}
    </a>    
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
      data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="navbar-nav px-3">
      <li class="nav-item text-nowrap">
        <a class="nav-link" href="{{ path("info") }}"><i class="fas fa-info-circle"></i></a>
      </li>
    </ul>
  </nav>

    <div class="container-fluid">
      <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="{{ path("homepage") }}">
                <i class="fas fa-home"></i>
                {{ 'menu.item.home'|trans }}
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path("customer_index") }}">
                <i class="fas fa-user"></i>
                {{ 'menu.item.customers'|trans }}
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path("group_index") }}">
                <i class="fas fa-users"></i>
                {{ 'menu.item.groups'|trans }}
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">{% block section %}{% endblock section %}</h1>
          {% block mainbutton %}{% endblock mainbutton %}
        </div>  

        {% block body %}{% endblock body %}

      </main>
    </div>
    </div>

    {% block javascripts %}
      <!-- Scripts -->
      <script src="{{ asset('bundles/app/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
      <script src="{{ asset('bundles/app/vendor/fontawesome/fontawesome.js') }}"></script>
      <script src="{{ asset('bundles/app/vendor/bootstrap/js/bootstrap.bundle.js') }}"></script>
      <script src="{{ asset('bundles/app/vendor/datatables/js/datatables.min.js') }}"></script>
      <script src="{{ asset('bundles/app/vendor/jquery-confirm/js/jquery-confirm.min.js') }}"></script>
    {% endblock javascripts %}

  </body>

</html>